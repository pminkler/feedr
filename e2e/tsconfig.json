{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["../src/*"]
    },
    "outDir": "../dist-e2e",
    "baseUrl": "./"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}